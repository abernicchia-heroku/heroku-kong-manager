{
  "name": "ab-cr-kong-manager",
  "description": "Kong Gateway Manager (GUI)",
  "keywords": ["kong", "api-gateway", "manager"],
  "stack": "container",
  "env": {
    "KONG_DATABASE": {
      "description": "Database type",
      "value": "postgres"
    },
    "KONG_PG_SSL": {
      "description": "Enable SSL for database connection",
      "value": "on"
    },
    "KONG_PG_SSL_VERIFY": {
      "description": "Verify SSL certificate",
      "value": "off"
    },
    "KONG_ADMIN_GUI_API_URL": {
      "description": "Kong Admin API URL",
      "value": "https://ab-cr-kong-admin.herokuapp.com"
    },
    "KONG_ADMIN_TOKEN": {
      "description": "Admin API authentication token",
      "required": true,
      "generator": "secret"
    },
    "KONG_PROXY_LISTEN": {
      "description": "Proxy listen configuration (disabled for manager)",
      "value": "off"
    },
    "KONG_ADMIN_LISTEN": {
      "description": "Admin API listen configuration (disabled for manager)",
      "value": "off"
    },
    "KONG_GUI_LISTEN": {
      "description": "Kong Manager listen configuration",
      "value": "0.0.0.0:${PORT}"
    },
    "KONG_GUI_URL": {
      "description": "Kong Manager URL (will be set by Heroku)",
      "required": true,
      "value": "https://${HEROKU_APP_NAME}.herokuapp.com"
    },
    "KONG_ADMIN_GUI_URL": {
      "description": "Kong Admin GUI URL (will be set by Heroku)",
      "required": true,
      "value": "https://${HEROKU_APP_NAME}.herokuapp.com"
    },
    "KONG_GUI_AUTH": {
      "description": "Enable authentication for Kong Manager",
      "value": "basic-auth"
    },
    "KONG_ENFORCE_RBAC": {
      "description": "Enable RBAC",
      "value": "on"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:basic"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
} 